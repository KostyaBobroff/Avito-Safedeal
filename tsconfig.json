{
  "compilerOptions": {
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "typeRoots": [ "types", "node_modules/@types"],
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["node_modules", "typings"]
}